---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import SocialLinks from "../components/SocialLinks.astro";
import person from "../assets/person.svg";
import socialData from "../data/social.json";
---

<Layout
  title="John Doe"
  description="Software Engineer, Tech Enthusiast, and a lover of all things tech"
>
  <p class="text-center">I'm a Frontend Web Developer with 6 years of experience.</p>

  <ul class="app-card-list social-link-list">
    {
      socialData.map((socialData) => {
        return (
          <SocialLinks
            name={socialData.name}
            url={socialData.url}
            image={socialData.image}
          />
        );
      })
    }
  </ul>
</Layout>

<style>
  .social-link-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
  }
  /*show all 4 in one row*/
  .social-link-list > li {
    flex: 1 1 25%;
  }
  p {
    font-size: 1.5rem;
    line-height: 2.25rem;
  }
</style>
