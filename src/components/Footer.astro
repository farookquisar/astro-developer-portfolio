---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="footer">
  <footer>
    <p class="footer-text">
      Copyright &copy; <span>{title}</span> <span id="copyrightDate"></span> - All Rights Reserved
    </p>
  </footer>
</div>

<style>
  .footer-text {
    text-align: center;
    font-size: 16px;
    color: #fff;
    padding: 10px;
    background: rgba(0, 0, 0, 0.85);
    border-radius: 0.6rem;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 10%), 0 2px 4px -2px rgb(0 0 0 / 10%);
  }
</style>

